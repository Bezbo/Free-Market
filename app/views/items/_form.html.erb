<%= form_for(@item) do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :tag_list, "Tags (seperated with commas)"%><br />
    <%= f.text_field :tag_list %>
  </div>
  <div class="field">
    <%= f.label :discription %><br />
    <%= f.text_area :discription %>
  </div>
  <div>
    <%= f.check_box :draft %>
    <%= f.label(:draft, "draft") %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
